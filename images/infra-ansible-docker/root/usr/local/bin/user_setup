#!/bin/bash
set -e

# ensure $HOME exists and is accessible by group 0 (we don't know what the runtime UID will be)
mkdir -p ${HOME}
chown ${USER_UID}:0 ${HOME}
chmod ug+rwx ${HOME}

# runtime user will need to be able to self-insert in /etc/passwd
chmod 664 /etc/passwd

# create ansible tmp dir
mkdir -p ${HOME}/.ansible/tmp
chown -R ${USER_UID}:0 ${HOME}/.ansible
chmod -R ug+rwx ${HOME}/.ansible

echo ${APP_ROOT}
chmod -R g+r ${APP_ROOT}
find ${APP_ROOT} -type d -exec chmod g+x {} +
# ensure that the dynamic inventory dir can have content created
find ${APP_ROOT} -type d -exec chmod g+wx {} +

rm $0
